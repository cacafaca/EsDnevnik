<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ProCode.EsDnevnikMob.Views.MainPage"             
             Title="{Binding Title}">


    <ContentPage.Behaviors>
        <prism:EventToCommandBehavior EventName="Appearing"
                                      Command="{Binding AppearingCommand}"/>
    </ContentPage.Behaviors>

    <StackLayout HorizontalOptions="Fill" VerticalOptions="Start" >
        <StackLayout Orientation="Vertical">
            <Label Text="Korisničko ime" x:Name="labelUsername" Style="{StaticResource MainPageLabelStyle}"/>
            <Entry Text="{Binding Username}" x:Name="entryUsername" Style="{StaticResource MainPageEntryStyle}" IsEnabled="{Binding IsNotLogging}"/>

            <Label Text="Lozinka" x:Name="labelPassword" Style="{StaticResource MainPageLabelStyle}"/>
            <Entry Text="{Binding Password}" IsPassword="True" x:Name="entryPassword" Style="{StaticResource MainPageEntryStyle}" IsEnabled="{Binding IsNotLogging}"/>

            <Button Text="Prijavi se" Command="{Binding LoginNavigateCommand}" x:Name="buttonLogin" IsEnabled="{Binding IsNotLogging}"/>
        </StackLayout>
        <ActivityIndicator IsRunning="{Binding IsLogging}"/>
    </StackLayout>

</ContentPage>