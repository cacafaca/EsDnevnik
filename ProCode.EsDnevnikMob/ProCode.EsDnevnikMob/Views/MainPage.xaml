<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProCode.EsDnevnikMob.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="Fill" VerticalOptions="CenterAndExpand" IsEnabled="{Binding !IsLogging}">
        <ActivityIndicator IsRunning="{Binding IsLogging}"/>

        <Label Text="Korisničko ime" x:Name="labelUsername" Style="{StaticResource MainPageLabelStyle}"/>
        <Entry Text="{Binding Username}" x:Name="entryUsername" Style="{StaticResource MainPageEntryStyle}"/>

        <Label Text="Lozinka" x:Name="labelPassword" Style="{StaticResource MainPageLabelStyle}"/>
        <Entry Text="{Binding Password}" IsPassword="True" x:Name="entryPassword" Style="{StaticResource MainPageEntryStyle}"/>

        <Button Text="Prijavi se" Command="{Binding NavigateCommand}" x:Name="buttonLogin"/>
    </StackLayout>

</ContentPage>